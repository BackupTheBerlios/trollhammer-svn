<?xml version="1.0" encoding="utf-8"?>
<!-- Ce fichier ant fonctionne parfaitement pour ce qu'il est censé faire pour l'instant.
	 J'ajouterai au fur et à mesure différentes fonctionnalités supplémentaires. 
     Si vous avez des propositions de modifications, faites m'en part et on en discute.
     
     Si vous modifiez qqch sans m'en parler ou sans mon accord, veillez à ce que je ne 
     le sache pas et/ou que je ne le remarque pas sous peine de mort lente et extrêmement douloureuse.
     Vous êtes prévenu.
     Have a nice day 
 -->
<project name="troll" default="compile" basedir=".">


	<property name="sources" value="sources"/>
	<property name="classes" value="classes"/>
	<property name="encodage" value="UTF8"/>

	<target name="compile" description="Construit le projet en entier">
	<echo>Compilation... nous declinons toutes responsabilites en cas d'erreurs de compilation...</echo>
	<javac encoding="${encodage}" srcdir="${sources}" destdir="${classes}"/>
	</target>


	<target name="serveur"  description="Lancement du serveur (apres compilation)">
	<echo>Execution du serveur!</echo>
	<java classname="trollhammer.Serveur">
		<classpath>
			<pathelement location="classes/"/>
		</classpath>
	</java>
	
	</target>

	<target name="client"  description="Lancement du client (apres compilation)">
	<echo>Execution du client!</echo>
	<java classname="trollhammer.Client">
		<classpath>
			<pathelement location="classes/"/>
		</classpath>
	</java>
	
	</target>


	<target name="putz" description="Putzfrau mode mega-destroy">
	<echo>Et ca putz!!!</echo>
		<delete verbose="true">
			<fileset dir="${classes}"/>
		</delete>
	</target>
	
	

</project>